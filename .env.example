# AWS Bedrock Configuration
AWS_REGION=us-east-1
AWS_PROFILE=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_SESSION_TOKEN=

# Bedrock Models
BEDROCK_MODEL_ID=anthropic.claude-sonnet-4-20250514-v1:0
BEDROCK_FAST_MODEL_ID=us.anthropic.claude-3-5-haiku-20241022-v1:0
MAX_OUTPUT_TOKENS=4096
MAX_THINKING_TOKENS=1024

# Claude Code OAuth (use `claude setup-token` to generate)
# CLAUDE_CODE_OAUTH_TOKEN=

# Bedrock Feature Flags
CLAUDE_CODE_USE_BEDROCK=1
ENABLE_PROMPT_CACHING=true
ENABLE_STREAMING=true
DISABLE_PROMPT_CACHING=false

# Cursor Integration
CURSOR_INTEGRATION_MODE=both  # cli, extension, or both
# CURSOR_PATH=/Applications/Cursor.app

# Monitoring
ENABLE_CLOUDWATCH=true
LOG_LEVEL=INFO

# Cost Management
COST_ALERTS_ENABLED=true
MONTHLY_BUDGET_USD=100

# Security
# Never commit tokens or keys to git!
# Use this file as a template only
